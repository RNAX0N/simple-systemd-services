[Unit]
Description=Check for Arch Updates and Notify
Wants=network-online.target
After=network-online.target

[Service]
Type=oneshot
ExecStart=/bin/bash -c 'if checkupdates > /dev/null; then notify-send "System Updates Available" "$(checkupdates | wc -l) packages."; fi'

